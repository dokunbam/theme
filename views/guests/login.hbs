<div class="container">
    <div class="row p-4">
        <div class="col-md-4"></div>
        <div class="col-md-4 p-4" style="background-color: #eaecef;">
            <form action="/guests/login" method="post">
                <p>Please login here </p>

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" aria-label="username" name="username" id="username" placeholder="Username"
                        class="form-control">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" aria-label="password" id="password" placeholder="Password"
                        class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
                <a class="btn btn-primary btn-group text-white" id="productbtn" href="/users/register">Register</a>
            </form>
        </div>


        <div class="col-md-4">
        </div>
    </div>
</div>